# MegaMind Database Environment Configuration

# Database Configuration
MYSQL_ROOT_PASSWORD=megamind_root_pass
MYSQL_PASSWORD=megamind_secure_pass
MEGAMIND_DB_HOST=localhost
MEGAMIND_DB_PORT=3309
MEGAMIND_DB_NAME=megamind_database
MEGAMIND_DB_USER=megamind_user

# MCP Server Configuration  
MEGAMIND_MCP_SERVER_PORT=8002
MEGAMIND_MCP_AUTH_SECRET=jwt_secret_key_change_in_production
MEGAMIND_MCP_RATE_LIMIT_REQUESTS=100
MEGAMIND_MCP_RATE_LIMIT_WINDOW=60

# Performance Configuration
REDIS_URL=redis://localhost:6380/3
EMBEDDING_CACHE_SIZE=1000
QUERY_CACHE_TTL=900
CONNECTION_POOL_SIZE=10

# Development Settings
MEGAMIND_DEBUG=false
MEGAMIND_LOG_LEVEL=INFO