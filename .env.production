# MegaMind Context Database - Production Environment Configuration
# Copy to .env and modify values as needed for your deployment

# =============================================
# Database Configuration
# =============================================
MYSQL_ROOT_PASSWORD=megamind_root_password_change_in_production
MYSQL_PASSWORD=megamind_user_password_change_in_production

# Database connection settings
DB_HOST_IP=127.0.0.1
DB_HOST_PORT=3309
DB_DATA_PATH=./data/mysql

# =============================================
# Redis Configuration  
# =============================================
REDIS_HOST_IP=127.0.0.1
REDIS_HOST_PORT=6379
REDIS_DATA_PATH=./data/redis

# =============================================
# MCP Server Configuration
# =============================================
MCP_HOST_IP=127.0.0.1
MCP_HOST_PORT=8002
MCP_DATA_PATH=./data/mcp
MCP_LOGS_PATH=./logs
MCP_CACHE_PATH=./cache

# =============================================
# Project Realm Configuration
# =============================================
PROJECT_REALM=PROJ_ECOMMERCE
PROJECT_NAME=E-Commerce Platform

# =============================================
# Dashboard Configuration (Optional)
# =============================================
DASHBOARD_HOST_IP=127.0.0.1
DASHBOARD_HOST_PORT=8080

# =============================================
# Logging and Monitoring
# =============================================
LOG_LEVEL=INFO

# =============================================
# Performance Tuning
# =============================================
# Increase these values for production workloads
EMBEDDING_CACHE_SIZE=5000
EMBEDDING_CACHE_TTL=14400
ASYNC_MAX_WORKERS=6
ASYNC_BATCH_SIZE=50
CONNECTION_POOL_SIZE=30